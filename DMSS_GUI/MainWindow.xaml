<Window x:Class="DMSS_GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DMSS_GUI"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="700" Background="#F2F2F2">
    <Grid Margin="20">
        <!-- 레이아웃 그리드 -->
        <Grid.RowDefinitions>
            <RowDefinition Height="1.5*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="1.5*" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>

        <!-- Receiver A (세로형 ProgressBar) -->
        <StackPanel Grid.Row="0" Grid.Column="0" HorizontalAlignment="Center">
            <TextBlock Text="Receiver A" FontWeight="Bold" FontSize="16" HorizontalAlignment="Center"/>
            <Border BorderBrush="Gray" BorderThickness="2" CornerRadius="5" Padding="5" Margin="10">
                <ProgressBar Name="ReceiverA_Bar" Width="50" Height="200" Orientation="Vertical" Maximum="100" Value="70" Foreground="Blue"/>
            </Border>
        </StackPanel>

        <!-- Target Indicator -->
        <Border Grid.Row="0" Grid.Column="1" Background="White" CornerRadius="10" Padding="10" Margin="10">
            <TextBlock Name="TargetIndicator" Text="A와 더 가까움" FontSize="20" FontWeight="Bold"
                       Foreground="Black" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Border>

        <!-- Receiver B (세로형 ProgressBar) -->
        <StackPanel Grid.Row="0" Grid.Column="2" HorizontalAlignment="Center">
            <TextBlock Text="Receiver B" FontWeight="Bold" FontSize="16" HorizontalAlignment="Center"/>
            <Border BorderBrush="Gray" BorderThickness="2" CornerRadius="5" Padding="5" Margin="10">
                <ProgressBar Name="ReceiverB_Bar" Width="50" Height="200" Orientation="Vertical" Maximum="100" Value="30" Foreground="Blue"/>
            </Border>
        </StackPanel>

        <!-- System Status -->
        <Border Grid.Row="1" Grid.Column="0" Background="White" CornerRadius="10" Padding="10" Margin="10">
            <StackPanel>
                <TextBlock Text="System Status" FontWeight="Bold" FontSize="14"/>
                <TextBlock Name="SystemStatus_Text" Text="발사 준비" FontSize="16" Foreground="Blue"/>
            </StackPanel>
        </Border>

        <!-- Fire Button -->
        <Button Grid.Row="1" Grid.Column="1" Content="Fire" Width="120" Height="120"
                Background="Red" Foreground="White" FontSize="24" FontWeight="Bold"
                BorderThickness="0" Cursor="Hand" Click="FireButton_Click">
            <Button.Style>
                <Style TargetType="Button">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" CornerRadius="60" 
                                        Padding="10" Width="120" Height="120">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Button.Style>
        </Button>

        <!-- Problem Log -->
        <Border Grid.Row="1" Grid.Column="2" Background="White" CornerRadius="10" Padding="10" Margin="10">
            <StackPanel>
                <TextBlock Text="Problem" FontWeight="Bold" FontSize="14"/>
                <ListBox Name="Problem_Log" Height="80">
                    <ListBoxItem Content="센서 오류 감지" Foreground="Red"/>
                </ListBox>
            </StackPanel>
        </Border>
    </Grid>
</Window>
